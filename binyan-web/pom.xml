	<version>0.0.1-SNAPSHOT</version>
	<name>BINYAN</name>
	<url>http://www.binyan.cc</url>
	<developers>
		<developer>
			<name>Jimiby</name>
			<email>zhangjie_jimmy@163.com</email>
		</developer>
	</developers>

	<properties>
