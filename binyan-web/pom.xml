		<version>3.8.1</version>
		<scope>test</scope>
	</dependency>
</dependencies>
	<build>
		<finalName>binyan-web</finalName>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>8.1.16.v20140903</version>
			</plugin>
		</plugins>
